<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- 抽象bean：bean的属性abstract为true的bean，不能被IOC容器实例化，只用来被继承属性
	若某一个bean的class属性没有指定，则该bean必须是一个抽象bean
	 -->
	<bean id="address" class="com.lemon.beans.autowire.Address"
	p:city="Beijing^" p:street="WuDaoKou" abstract="true"></bean>
	
	<!-- <bean id="address2" class="com.lemon.beans.autowire.Address"
	p:city="Beijing" p:street="DaZhongsi"></bean> -->
	
	<!-- bean配置的继承：使用bean的parent 属性指定继承哪个bean的配置 -->
	<bean id="address2"  p:street="DaZhongsi" parent="address"></bean>
	
	
	<bean id="car" class="com.lemon.beans.autowire.Car"
	p:brand="Audi" p:price="300000"
	></bean>
	
	<!-- 要求在配置person时，必须有一个关联的car！换句话说person这个bean依赖与car这个bean -->
	<bean id="person" class="com.lemon.beans.autowire.Person"
	p:name="Tom" p:address-ref="address2" depends-on="car"
	>
	</bean>

</beans>
